<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PpsFindSidebar" parent="GtkStack">
    <child>
      <object class="GtkStackPage">
        <property name="name">results</property>
        <property name="child">
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="child">
              <object class="GtkListView" id="list_view">
                <style>
                  <class name="navigation-sidebar"/>
                </style>
                <property name="hexpand">True</property>
                <property name="factory">
                  <object class="GtkSignalListItemFactory" id="factory">
                    <signal name="setup" handler="factory_setup_cb" />
                    <signal name="bind" handler="factory_bind_cb" />
                    <signal name="unbind" handler="factory_unbind_cb" />
                  </object>
                </property>
                <property name="model">
                  <object class="GtkSingleSelection" id="selection">
                    <property name="model">
                      <object class="GListStore" id="model">
                        <property name="item-type">PpsSearchResult</property>
                      </object>
                    </property>
                    <signal name="selection-changed" handler="selection_changed_cb" />
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkStackPage">
        <property name="name">loading</property>
        <property name="child">
          <object class="GtkSpinner">
            <property name="halign">center</property>
            <property name="valign">center</property>
            <property name="width-request">32</property>
            <property name="height-request">32</property>
            <signal name="map" handler="pps_spinner_map_cb" />
            <signal name="unmap" handler="pps_spinner_unmap_cb" />
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkStackPage">
        <property name="name">no-results</property>
        <property name="child">
          <object class="AdwStatusPage">
            <style>
              <class name="compact"/>
            </style>
            <property name="icon-name">edit-find-symbolic</property>
            <property name="title">No Results Found</property>
            <property name="description">Try a different search</property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkStackPage">
        <property name="name">initial</property>
        <property name="child">
          <object class="AdwStatusPage">
            <style>
              <class name="compact"/>
            </style>
            <property name="icon-name">edit-find-symbolic</property>
            <property name="title">Perform A Search</property>
            <property name="description">The search results will appear here</property>
          </object>
        </property>
      </object>
    </child>
    <property name="visible-child-name">initial</property>
  </template>
</interface>
